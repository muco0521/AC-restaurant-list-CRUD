<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <a href="/restaurants/new" class="btn btn-major" id="create-button">增加餐廳清單</a>
          <input type="text" name="keyword" class="form-control" placeholder="搜尋餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">
        {{#each restaurants}}
        <a href="/restaurants/{{ this.id }}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{ this.image }}" alt="{{ this.name_en }}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{ this.name }}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{ this.category }}
              </div>

              <span class="badge bg-danger">
                {{ this.rating }}
                <i class="fas fa-star fa-xs"></i>
              </span>

            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>